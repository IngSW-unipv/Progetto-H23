DROP SCHEMA IF EXISTS TABELLERISTORANTE;
CREATE SCHEMA TABELLERISTORANTE;
USE TABELLERISTORANTE;

drop TABLE IF EXISTS PIATTI;
CREATE TABLE PIATTI
    (NOME CHAR(30) primary key,
    QUANTITA INTEGER,
    PREZZO DOUBLE);
    drop TABLE IF EXISTS PRENOTAZIONI;
CREATE TABLE PRENOTAZIONI
    (NOME_CLIENTE CHAR(30) primary key,
    NUMERO_PERSONE INTEGER);

